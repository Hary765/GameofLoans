<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/textView40"
        android:layout_width="500dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name30"
        android:layout_marginTop="15dp"
        android:background="@color/Grey"
        android:fontFamily="serif"
        android:text="Please enter the following data"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/n"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_alignBaseline="@+id/n3"
        android:layout_alignBottom="@+id/n3"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif"
        android:hint="Interest Rate"
        android:digits="0123456789"
        android:inputType="phone"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/n2"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_above="@+id/location_filed1"
        android:layout_alignParentStart="true"
        android:fontFamily="serif"
        android:hint="Enrollment Date"
        android:digits="0123456789/"
        android:inputType="phone"
        android:textSize="14sp" />

    <AutoCompleteTextView
        android:id="@+id/occupation_filed1"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/n2"
        android:fontFamily="serif"
        android:hint="Occupation"
        android:textSize="14sp" />

    <AutoCompleteTextView
        android:id="@+id/location_filed1"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="217dp"
        android:fontFamily="serif"
        android:hint="Location"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/n3"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_above="@+id/n2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:fontFamily="serif"
        android:hint="Amount Borrowed"
        android:digits="0123456789"
        android:inputType="phone"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/n4"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/n3"
        android:fontFamily="serif"
        android:hint="Graduation Date"
        android:digits="0123456789/"
        android:inputType="phone"
        android:textSize="14sp" />

    <Button
        android:id="@+id/add2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/occupation_filed1"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:text="Add"
        android:textColor="@color/Grey" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/n4"
        android:layout_alignStart="@+id/n4"
        android:fontFamily="sans-serif"
        android:text="MM/YYYY"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/n2"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:text="MM/YYYY"
        android:textSize="12sp" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:background="@color/colorPrimary"
        android:text="GO BACK"
        android:textColor="@color/Grey"
        android:textSize="12sp" />
</RelativeLayout>